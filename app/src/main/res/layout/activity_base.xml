<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        >
        <ImageView
            android:id="@+id/title_bar_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mingyi_choice_date_not_click_left_arrows"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/title_bar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="标题栏"
            android:textSize="20sp"
            android:visibility="invisible"
            />
        <RelativeLayout
            android:id="@+id/title_bar_right_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp">
            <ImageView
                android:id="@+id/title_bar_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mingyi_input_box_picture_button_icon"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/title_bar_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="右边"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
    <!-- 主要内容-->
    <LinearLayout
        android:id="@+id/base_content_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>